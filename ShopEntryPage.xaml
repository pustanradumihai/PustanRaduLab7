<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PustanRaduLab7.ShopEntryPage"
             Title="Shop Entry Page">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Editor Placeholder="Enter shop name"
                    Text="{Binding ShopName}"
                    Margin="20"
                    HeightRequest="50" />
            <Editor Placeholder="Enter shop address"
                    Text="{Binding Adress}"
                    Margin="20"
                    HeightRequest="50" />
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Text="Save"
                        Grid.Column="0"
                        Clicked="OnSaveButtonClicked" />
                <Button Text="Show Map"
                        Grid.Column="1"
                        Clicked="OnShowMapButtonClicked" />
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
